datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id_user String @id @default(uuid())
  email_user String @unique
  password_user String
  phone String
  type  user_type @default(USER)

  @@map("users")
}

model Patient{
  id_patient String @id @default(uuid())
  name_patient String
  ssn_patient String
  description_patient String
  exit_date DateTime @default(now())
  entry_date DateTime @default(now())

  @@map("patients")
}

model Beds{
  id_beds String @id @default(uuid())
  sector Int
  status Int
  status_changed_date DateTime @default(now())
  type beds_type

  @@map("beds")
}

enum user_type{
 ADMIN
 USER
}

enum beds_type{
  CLEANING_NEEDED
  ISOLATED
  MAINTANENCE_NEEDED
  MAINTANENCE
  CLEANING
  AVAILABLE
  OCUPIED
}
